---
const { title } = Astro.props;
import '../styles/global.css';
---

<html lang="en" class="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} | Marketing Engine AI</title>
	</head>
	<body class="bg-slate-950 text-slate-50 min-h-screen">
		<nav class="border-b border-slate-800 p-4 bg-slate-900/50 backdrop-blur-md sticky top-0 z-50">
			<div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
				<a href="/" class="font-bold text-xl tracking-tighter text-blue-500 hover:text-blue-400 transition-colors">Marketing Engine AI</a>
				<div class="flex items-center gap-1 md:gap-4 overflow-x-auto pb-2 md:pb-0 w-full md:w-auto">
					<a href="/strategy" class="flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-slate-800 transition text-sm font-medium whitespace-nowrap">
                        <span class="w-5 h-5 rounded-md bg-slate-800 border border-slate-700 flex items-center justify-center text-[10px] text-slate-500">1</span>
                        Analyze
                    </a>
					<a href="/customer" class="flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-slate-800 transition text-sm font-medium whitespace-nowrap">
                        <span class="w-5 h-5 rounded-md bg-slate-800 border border-slate-700 flex items-center justify-center text-[10px] text-slate-500">2</span>
                        Target
                    </a>
					<a href="/digital" class="flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-slate-800 transition text-sm font-medium whitespace-nowrap">
                        <span class="w-5 h-5 rounded-md bg-slate-800 border border-slate-700 flex items-center justify-center text-[10px] text-slate-500">3</span>
                        Validate
                    </a>
					<a href="/media" class="flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-slate-800 transition text-sm font-medium whitespace-nowrap">
                        <span class="w-5 h-5 rounded-md bg-slate-800 border border-slate-700 flex items-center justify-center text-[10px] text-slate-500">4</span>
                        Launch
                    </a>
                    <div class="h-4 w-px bg-slate-800 mx-2 hidden md:block"></div>
                    <a href="/report" class="bg-blue-600/10 text-blue-400 border border-blue-500/20 px-4 py-1.5 rounded-lg hover:bg-blue-600/20 transition text-sm font-bold">
                        Report
                    </a>
				</div>
			</div>
		</nav>
		<main class="max-w-7xl mx-auto p-6">
			<slot />
		</main>
	</body>
</html>