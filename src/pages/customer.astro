---
import BaseLayout from '../layouts/BaseLayout.astro';
import CustomerLab from '../features/customer/components/CustomerLab.svelte';
import TheoryCopilot from '../components/TheoryCopilot.svelte';
import { getEntry } from 'astro:content';

const customerIntro = await getEntry('marketing', '02-customer-intelligence');
---

<BaseLayout title="Customer Intelligence">
  <div class="max-w-6xl mx-auto mt-12 mb-24 px-4">
    
    <!-- Header Section -->
    <header class="mb-16">
      <div class="inline-block px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 font-mono text-[10px] uppercase tracking-[0.2em] mb-4">
        Phase 02: Intelligence
      </div>
      <h1 class="text-6xl font-black text-white tracking-tighter mb-4">
        Know your <span class="text-blue-500">Customer</span>.
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
        Transition from product-centric to customer-centric strategies using localized AI and data interpretation.
      </p>
    </header>

    <div class="space-y-12">
      <CustomerLab client:load />
    </div>

    <TheoryCopilot 
        client:load 
        moduleName="Customer" 
        theoryHtml={customerIntro?.body || ''} 
    />
  </div>
</BaseLayout>
