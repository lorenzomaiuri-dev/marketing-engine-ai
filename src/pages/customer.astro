---
import BaseLayout from '../layouts/BaseLayout.astro';
import CustomerLab from '../features/customer/components/CustomerLab.svelte';
import { getEntry } from 'astro:content';

const customerIntro = await getEntry('marketing', '02-customer-intelligence');
const { Content } = customerIntro ? await customerIntro.render() : { Content: () => null };
---

<BaseLayout title="Customer Intelligence Lab">
  <div class="max-w-4xl mx-auto mt-12 mb-24">
    
    <!-- Header Section -->
    <header class="text-center mb-16">
      <div class="inline-block px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 font-mono text-xs uppercase tracking-widest mb-4">
        Module 02: Intelligence
      </div>
      <h1 class="text-5xl font-black text-white tracking-tight mb-4">
        {customerIntro?.data.title}
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
        Transition from product-centric to customer-centric strategies using localized AI and data interpretation.
      </p>
    </header>

    <!-- Theory Section -->
    <div class="grid grid-cols-1 gap-12">
      <article class="prose prose-invert prose-blue max-w-none bg-slate-900/30 border border-slate-800/60 p-8 md:p-12 rounded-3xl backdrop-blur-sm relative overflow-hidden group hover:border-blue-500/30 transition-colors">
        <div class="absolute top-0 right-0 p-8 opacity-5">
           <svg class="w-24 h-24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
        </div>
        <Content />
      </article>

      <!-- Lab Section -->
      <section class="mt-8">
        <div class="flex items-center gap-4 mb-8">
          <div class="h-px flex-1 bg-gradient-to-r from-transparent via-slate-800 to-transparent"></div>
          <h2 class="text-sm font-bold uppercase tracking-[0.2em] text-slate-500">Interactive Lab</h2>
          <div class="h-px flex-1 bg-gradient-to-r from-transparent via-slate-800 to-transparent"></div>
        </div>

        <div class="space-y-12">
          <div id="customer-lab">
            <CustomerLab client:load />
          </div>
        </div>

        <div class="mt-16 p-8 bg-gradient-to-br from-blue-600/10 to-transparent border border-blue-500/20 rounded-2xl text-center relative overflow-hidden">
          <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-blue-500/10 rounded-full blur-3xl"></div>
          <p class="text-lg text-blue-200 font-serif italic relative z-10">
            "The goal of marketing is to know and understand the customer so well the product or service fits him and sells itself."
          </p>
          <p class="text-xs text-slate-500 mt-2">â€” Peter Drucker</p>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
