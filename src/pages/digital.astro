---
import BaseLayout from '../layouts/BaseLayout.astro';
import BusinessSimulator from '../features/digital/components/BusinessSimulator.svelte';
import TheoryCopilot from '../components/TheoryCopilot.svelte';
import { getEntry } from 'astro:content';

const digitalIntro = await getEntry('marketing', '03-digital-transition');
---

<BaseLayout title="Business Economics">
  <div class="max-w-6xl mx-auto mt-12 mb-24 px-4">
    
    <!-- Header Section -->
    <header class="mb-16">
      <div class="inline-block px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 font-mono text-[10px] uppercase tracking-[0.2em] mb-4">
        Phase 03: Economics & Validation
      </div>
      <h1 class="text-6xl font-black text-white tracking-tighter mb-4">
        Validate the <span class="text-emerald-500">Engine</span>.
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
        Stress-test your unit economics and determine if your marketing strategy is financially sustainable.
      </p>
    </header>

    <div class="space-y-12">
      <BusinessSimulator client:load />
    </div>

    <TheoryCopilot 
        client:load 
        moduleName="Economics" 
        theoryHtml={digitalIntro?.body || ''} 
    />
  </div>
</BaseLayout>
