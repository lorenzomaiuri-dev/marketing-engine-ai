---
import BaseLayout from '../layouts/BaseLayout.astro';
import BusinessSimulator from '../features/digital/components/BusinessSimulator.svelte';
import { getEntry } from 'astro:content';

const digitalIntro = await getEntry('marketing', '03-digital-transition');
const { Content } = digitalIntro ? await digitalIntro.render() : { Content: () => null };
---

<BaseLayout title="Digital Transition Lab">
  <div class="max-w-6xl mx-auto mt-12 mb-24 px-4">
    
    <!-- Header Section -->
    <header class="text-center mb-16">
      <div class="inline-block px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 font-mono text-xs uppercase tracking-widest mb-4">
        Module 03: Digital Transition
      </div>
      <h1 class="text-5xl font-black text-white tracking-tight mb-4">
        {digitalIntro?.data.title}
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
        Explore the sustainability of digital business models through high-fidelity unit economics simulation.
      </p>
    </header>

    <!-- Theory Section -->
    <div class="grid grid-cols-1 gap-12">
      <article class="prose prose-invert prose-emerald max-w-none bg-slate-900/30 border border-slate-800/60 p-8 md:p-12 rounded-3xl backdrop-blur-sm relative overflow-hidden group hover:border-emerald-500/30 transition-colors">
        <div class="absolute top-0 right-0 p-8 opacity-5">
           <svg class="w-24 h-24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
        </div>
        <Content />
      </article>

      <!-- Lab Section -->
      <section class="mt-8">
        <div class="flex items-center gap-4 mb-8">
          <div class="h-px flex-1 bg-gradient-to-r from-transparent via-slate-800 to-transparent"></div>
          <h2 class="text-sm font-bold uppercase tracking-[0.2em] text-slate-500">Interactive Simulation</h2>
          <div class="h-px flex-1 bg-gradient-to-r from-transparent via-slate-800 to-transparent"></div>
        </div>

        <div class="space-y-12">
          <div id="unit-economics-simulator">
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-white flex items-center gap-2">
                <span class="w-8 h-8 rounded-lg bg-emerald-500/20 border border-emerald-500/40 flex items-center justify-center text-emerald-400 text-sm">03</span>
                Business Model Simulator
              </h3>
              <p class="text-slate-400 text-sm mt-1 ml-10">Stress-test your unit economics by adjusting CAC, ARPU, and Churn rates.</p>
            </div>
            <BusinessSimulator client:load />
          </div>
        </div>

        <div class="mt-16 p-8 bg-gradient-to-br from-emerald-600/10 to-transparent border border-emerald-500/20 rounded-2xl text-center relative overflow-hidden">
          <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-emerald-500/10 rounded-full blur-3xl"></div>
          <p class="text-lg text-emerald-200 font-serif italic relative z-10">
            "In a digital world, your unit economics are your destiny. Scale responsibly." 
          </p>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
