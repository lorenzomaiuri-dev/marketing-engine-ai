---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Target, Users, Globe, BarChart3, ArrowRight } from '@lucide/svelte';
import { buttonVariants } from '@/lib/components/ui/button';
import { Badge } from '@/lib/components/ui/badge';
---

<BaseLayout title="Home">
  <div class="relative py-20 overflow-hidden">
    <!-- Background Accents -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full -z-10">
      <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-blue-600/10 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-[10%] right-[-5%] w-[30%] h-[30%] bg-purple-600/10 rounded-full blur-[120px]"></div>
    </div>

    <div class="text-center max-w-4xl mx-auto px-6">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 font-mono text-xs uppercase tracking-widest mb-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
        </span>
        Intelligence-Driven Strategy
      </div>
      
      <h1 class="text-6xl md:text-7xl font-black text-white tracking-tight mb-8 animate-in fade-in slide-in-from-bottom-6 duration-700 delay-100">
        Engineered for <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-500">Market Dominance</span>
      </h1>
      
      <p class="text-xl text-slate-400 mb-12 leading-relaxed animate-in fade-in slide-in-from-bottom-8 duration-700 delay-200">
        Marketing Engine AI is a comprehensive suite of strategic tools designed to transform complex data into actionable market intelligence.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in fade-in slide-in-from-bottom-10 duration-700 delay-300">
        <a href="/strategy" class={buttonVariants({ size: 'lg', class: 'h-14 px-8 rounded-2xl bg-blue-600 hover:bg-blue-500 text-white font-bold shadow-xl shadow-blue-600/20 group' })}>
          Enter the Lab <ArrowRight class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </a>
        <a href="#modules" class={buttonVariants({ variant: 'outline', size: 'lg', class: 'h-14 px-8 rounded-2xl border-slate-800 bg-slate-900/50 hover:bg-slate-800 text-slate-300 font-bold' })}>
          Explore Modules
        </a>
      </div>
    </div>
  </div>

  <section id="modules" class="py-24">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Strategic Lab -->
      <a href="/strategy" class="group p-8 rounded-3xl bg-slate-900/40 border border-slate-800/50 hover:border-blue-500/40 hover:bg-slate-900/60 transition-all">
        <div class="w-12 h-12 rounded-2xl bg-blue-500/10 flex items-center justify-center text-blue-400 mb-6 group-hover:scale-110 transition-transform">
          <Target class="w-6 h-6" />
        </div>
        <h3 class="text-xl font-bold text-white mb-2">Strategic Lab</h3>
        <p class="text-slate-500 text-sm leading-relaxed">
          SWOT analysis and Marketing Mix modeling based on advanced strategic frameworks.
        </p>
      </a>

      <!-- Customer AI -->
      <a href="/customer" class="group p-8 rounded-3xl bg-slate-900/40 border border-slate-800/50 hover:border-blue-500/40 hover:bg-slate-900/60 transition-all">
        <div class="w-12 h-12 rounded-2xl bg-blue-500/10 flex items-center justify-center text-blue-400 mb-6 group-hover:scale-110 transition-transform">
          <Users class="w-6 h-6" />
        </div>
        <div class="flex items-center gap-2 mb-2">
          <h3 class="text-xl font-bold text-white">Customer AI</h3>
          <Badge variant="outline" class="text-[10px] font-bold px-1.5 py-0.5 rounded bg-blue-500/10 text-blue-400 border-blue-500/20 uppercase">Module 02</Badge>
        </div>
        <p class="text-slate-500 text-sm leading-relaxed">
          Advanced buyer persona generation and behavioral analysis powered by LLMs.
        </p>
      </a>

      <!-- Digital Strategy -->
      <div class="group p-8 rounded-3xl bg-slate-900/40 border border-slate-800/50 hover:border-blue-500/40 hover:bg-slate-900/60 transition-all opacity-60">
        <div class="w-12 h-12 rounded-2xl bg-slate-800 flex items-center justify-center text-slate-400 mb-6 group-hover:scale-110 transition-transform">
          <Globe class="w-6 h-6" />
        </div>
        <div class="flex items-center gap-2 mb-2">
          <h3 class="text-xl font-bold text-white">Digital Core</h3>
          <span class="text-[10px] font-bold px-1.5 py-0.5 rounded bg-slate-800 text-slate-500">SOON</span>
        </div>
        <p class="text-slate-500 text-sm leading-relaxed">
          Omnichannel presence planning and digital ecosystem orchestration.
        </p>
      </div>

      <!-- Media Analytics -->
      <div class="group p-8 rounded-3xl bg-slate-900/40 border border-slate-800/50 hover:border-blue-500/40 hover:bg-slate-900/60 transition-all opacity-60">
        <div class="w-12 h-12 rounded-2xl bg-slate-800 flex items-center justify-center text-slate-400 mb-6 group-hover:scale-110 transition-transform">
          <BarChart3 class="w-6 h-6" />
        </div>
        <div class="flex items-center gap-2 mb-2">
          <h3 class="text-xl font-bold text-white">Media Lab</h3>
          <span class="text-[10px] font-bold px-1.5 py-0.5 rounded bg-slate-800 text-slate-500">SOON</span>
        </div>
        <p class="text-slate-500 text-sm leading-relaxed">
          Performance tracking, budget allocation, and ROI prediction models.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>