---
import BaseLayout from '../layouts/BaseLayout.astro';
import CommunicationLab from '../features/media/components/CommunicationLab.svelte';
import TheoryCopilot from '../components/TheoryCopilot.svelte';
import { getEntry } from 'astro:content';

const mediaIntro = await getEntry('marketing', '04-communication-digital');
---

<BaseLayout title="Go-to-Market">
  <div class="max-w-6xl mx-auto mt-12 mb-24 px-4">
    
    <!-- Header Section -->
    <header class="mb-16">
      <div class="inline-block px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-400 font-mono text-[10px] uppercase tracking-[0.2em] mb-4">
        Phase 04: Launch & Communication
      </div>
      <h1 class="text-6xl font-black text-white tracking-tighter mb-4">
        Launch the <span class="text-indigo-500">Campaign</span>.
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
        Strategize your digital presence, optimize for search engines, and simulate the impact of your communication.
      </p>
    </header>

    <div class="space-y-12">
      <CommunicationLab client:load />
    </div>

    <TheoryCopilot 
        client:load 
        moduleName="Media" 
        theoryHtml={mediaIntro?.body || ''} 
    />
  </div>
</BaseLayout>