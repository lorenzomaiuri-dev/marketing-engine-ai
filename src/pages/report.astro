---
import BaseLayout from '../layouts/BaseLayout.astro';
import ReportDashboard from '../components/ReportDashboard.svelte';
---

<BaseLayout title="Strategic Report">
  <div class="max-w-6xl mx-auto mt-12 mb-24 px-4">
    <header class="mb-12 flex justify-between items-end">
        <div>
            <div class="inline-block px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 font-mono text-[10px] uppercase tracking-[0.2em] mb-4">
                Final Output
            </div>
            <h1 class="text-6xl font-black text-white tracking-tighter">
                Strategic <span class="text-blue-500">Briefing</span>.
            </h1>
        </div>
    </header>

    <ReportDashboard client:load />
  </div>
</BaseLayout>
