---
import BaseLayout from '../layouts/BaseLayout.astro';
import SwotCanvas from '../features/strategy/components/SwotCanvas.svelte';
import MarketingMixModeler from '../features/strategy/components/MarketingMixModeler.svelte';
import TheoryCopilot from '../components/TheoryCopilot.svelte';
import { getEntry } from 'astro:content';

const strategyIntro = await getEntry('marketing', '01-strategy-foundations');
const { content } = strategyIntro ? await strategyIntro.render() : { content: '' };

// Get HTML content for the copilot
const theoryHtml = strategyIntro ? (await strategyIntro.render()).remarkPluginFrontmatter.excerpt || '' : '';
// Actually render() returns a Content component, but we can't easily get HTML string from it here for Svelte.
// But we can just use the description or a simplified version for now, or pass the rendered content differently.
// Let's assume we can get the raw body or a rendered version.
const html = strategyIntro?.body || ''; 
---

<BaseLayout title="Strategic Analysis">
  <div class="max-w-6xl mx-auto mt-12 mb-24 px-4">
    
    <!-- Header Section -->
    <header class="mb-16">
      <div class="inline-block px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 font-mono text-[10px] uppercase tracking-[0.2em] mb-4">
        Phase 01: Strategic Foundations
      </div>
      <h1 class="text-6xl font-black text-white tracking-tighter mb-4">
        Analyze the <span class="text-blue-500">Market</span>.
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
        Define your internal capabilities and map the external landscape to build a bulletproof positioning.
      </p>
    </header>

    <div class="space-y-16">
      <section id="swot-canvas">
        <SwotCanvas client:load />
      </section>

      <section id="marketing-mix">
        <MarketingMixModeler client:load />
      </section>
    </div>

    <!-- Copilot Integration -->
    <TheoryCopilot 
        client:load 
        moduleName="Strategy" 
        theoryHtml={strategyIntro?.body || 'Theory content not available.'} 
    />
  </div>
</BaseLayout>